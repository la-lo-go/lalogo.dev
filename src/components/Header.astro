---
import Lines from "./Lines.astro";
import PersonalLogo from "./Personal-Logo.astro";
import SocialIcons from "./Social-Icons.astro";
---

<header
  class="grid grid-cols-2 sm:flex sm:flex-row md:flex-col gap-4 justify-between max-md:items-end mb-8"
>
  <PersonalLogo />

  <div class="space-y-2">
    <div
      class="flex flex-col md:flex-row gap-3 justify-between items-center text-lg text-secondary"
      data-aos="fade-up"
      data-aos-duration="1500"
    >
      <div class="text-center font-normal max-sm:order-3 max-sm:w-full">
        <i>"If it doesn't exist, code it!"</i>
      </div>

      <SocialIcons />
    </div>

    <Lines />
  </div>
</header>