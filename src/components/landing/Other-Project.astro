---
type Props = {
    index: number;
    template: {
        title: string;
        description: string;
        url: string;
    };
};

const {index, template} = Astro.props;
---

<li
  class="flow-root col-span-full h-full hover:bg-secondary/90 hover:text-gray bg-secondary transition-colors duration-200"
  data-aos="fade-up"
  data-aos-duration={(index + 1) * 250 + 1000}
>
  <a
    href={template.url}
    class="flex flex-col sm:flex-row justify-between gap-6 max-sm:gap-2 h-full"
  >
    <div class="p-3">
      <p class="italic shrink-0">{template.title}</p>
    </div>
    <div class="p-3">
      <p class="text-xs leading-relaxed">{template.description}</p>
    </div>
  </a>
</li>

