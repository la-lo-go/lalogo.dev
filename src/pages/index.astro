---
import { AstroSeo } from "@astrolib/seo";

import Layout from "../layouts/Layout.astro";
import Biopgraphy from "../components/landing/Biopgraphy.astro";
import MainProjects from "../components/landing/Main-Projects.astro";
import OtherProjects from "../components/landing/Other-Projects.astro";

const title = `La-lo-go`;
const description = `La-lo-go | Full-stack developer | If it doesn't exist, code it!`;
const url = "https://lalogo.dev";
---

<AstroSeo
  title={title}
  description={description}
  canonical={url}
  openGraph={{
    url: url,
    title: title,
    description: description,
    images: [
      {
        url: "https://www.lalogo.dev/opengraph/twitter.png",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://lalogo.dev/opengraph/fb.png" },
      { url: "https://lalogo.dev/opengraph/twitter.png" },
    ],
    site_name: title,
  }}
  twitter={{
    handle: "@la_lo_go",
    site: "@la_lo_go",
    cardType: "summary_large_image",
  }}
/>

<Layout>
  <Biopgraphy />

  <MainProjects />

  <OtherProjects/>
</Layout>